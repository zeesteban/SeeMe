<!--nearby.wxml-->

<!-- SCROLL -->

<scroll-view scroll-x="true" style=" white-space: nowrap; display: flex" >
  <view style="display: inline-block" class="btn scroll-tag tiny-text">Select a tag</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 1</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 2</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 3</view>
  <view style="display: inline-block" class="scroll-tag-active tiny-text">Tag 4</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 5</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 6</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 7</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 8</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 9</view>
  <view style="display: inline-block" class="scroll-tag tiny-text">Tag 10</view>
</scroll-view>

<!--Card loop -->

<view class="wrapper">
<block wx:for="{{users}}" wx:for-item="user" wx:key>
  <block wx:if="{{user.id == current_user}}">
  </block>
  <block wx:else>
  <view class="card" id="{{user.id}}" bindtap="profileTap">
    <image class="userinfo-avatar card-image" src="{{user.avatar}}"></image>
  <view class="card-name">
      {{user.nickname}}
      <block wx:if="{{user.gender == 2}}">
      <image src="../../images/female.png" class="gender"></image>
      </block>
      <block wx:elif="{{user.gender == 1}}">
      <image src="../../images/male.png" class="gender"></image>
      </block>
  </view>
  <view class="align-center tiny-text">2 km away</view>
  <view class="box">
    <block wx:for="{{user.tag_list}}" wx:for-item="tag" wx:key>
      <text class="top-tag">{{tag}}</text>
    </block>
  </view>
  <view class="btn align-center" id="{{user.id}}" catchtap="meetViewTap">Meet</view>
</view>
</block>
</block>
</view>

