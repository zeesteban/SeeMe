<!--pages/userProfile/userProfile.wxml-->

<view class="wrapper"></view>
<view class="container-profile">
  <block wx:for="{{users}}" wx:key="">
    <block wx:if="{{item.id == id}}">
      <image src="{{item.avatar}}" class="profile-img"></image>
    </block>
  </block>
</view>

<view class="align-center padded">
  <block wx:for="{{users}}" wx:key="">
    <block wx:if="{{item.id == id}}">
      <text class="h1">{{item.nickname}}</text>
    </block>
  </block>
</view>

<view class="title-box">
  Bio:
</view>
<view class="box">
  {{ bio }}
</view>

<view class="title-box">
  Looking for people interested in...
</view>

<view class="box">
 <block wx:for="{{tag_list}}" wx:for-item="tag" wx:key>
 <text class="tags">{{tag}}</text>
 </block>
</view>

<view class="box">
  <block wx:for="{{users}}" wx:key="">
    <block wx:if="{{item.id == id}}">
  <text class="btn btn-small" bindtap="meetTap" id="{{id}}">Meet {{item.nickname}}</text>
  </block>
</block>
</view>

