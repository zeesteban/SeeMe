/* pages/userProfile/userProfile.wxss */

.profile-img {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  border: 10rpx solid white;
}

.wrapper {
  width: 100%;
  /*background: linear-gradient(180deg, rgba(93, 115, 126, 1) 0%, rgba(252, 255, 253, 0.2) 90%);*/
  height: 300rpx;
  background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
}

.container-profile {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-top: -250rpx;
  box-sizing: border-box;
}

.title-box {
  background-color: #F4F7F7;
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 20rpx 0;
  /*box-shadow: 1rpx 3rpx 3rpx #5D737E;*/
}

.box {
  margin: 0 20rpx;
  padding: 20rpx;
  line-height: 1.5em;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.tags {
  border: 1rpx solid #4BDDB9;
  border-radius: 40rpx;
  letter-spacing: 0.4px;
  padding: 15rpx 20rpx;
  margin: 10rpx;
}

.btn{
  border: 2rpx solid #4BDDB9;
  box-shadow:0rpx 1rpx 20rpx #c7f6eb;
  text-align: center;
  background-color: #4BDDB9;
  color: #FCFFFD;
  border-radius: 10rpx;
  letter-spacing: 0.4px;
  margin-bottom: 40rpx;
  line-height: 2;
  padding-left: 10rpx;
  padding-right: 10rpx
}

.btn-small {
  width: 30%;
  text-align: center;
}
