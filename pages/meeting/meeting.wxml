<!--meeting.wxml-->
<view class="align-center meeting-title padded">
  <text class="h1">Meeting with <text class="underline">{{recipient.nickname}}</text></text>
  <view class="box">
      <view> You got lucky!</view>
      {{recipient.nickname}} also wants to meet up with you. Send them a message and decide on where you are going to meet up.
  </view>
</view>

<view class="container-meeting">
  <view class="meeting-profile">
    <image src="{{userInfo.avatarUrl}}" class="meeting-img"></image>
    <view>{{userInfo.nickName}}</view>
  </view>
  <view class="meeting-profile2">
    <image src="{{recipient.avatar}}" class="meeting-img"></image>
    <view>{{recipient.nickname}}</view>
  </view>
</view>

<view class="wrapper padded"><map id="myMap" show-location /></view>
    
<view class="align-center padded"><text class="h1 messages underline">Messages</text></view>
  <view class="messageBox">
    <view wx:for="{{message}}" wx:for-item="message" wx:key>
      <view wx:if="{{message.sender_id == current_user}}">
        <view class="sender"><text class="message">{{message.content}}</text><image src="{{userInfo.avatarUrl}}" class="profile-image sender"></image></view>
      </view>
      <view wx:else>
          <view class="recipient"> <image class="profile-image recipient" src="{{recipient.avatar}}"></image><text class="message">{{message.content}}</text></view>
      </view>
    </view>
  </view>
  <form bindsubmit="bindFormSubmit" id="{{meeting_id}}" data-recipient="{{recipient.id}}" data-sender="{{current_user}}"> <!--  this still needs a meeting id-->
  <input type="text" name="content" class="textBox" placeholder="Your message"/>
  <button form-type="submit">Send</button>
  </form>



