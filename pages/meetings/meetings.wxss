/* meetings.wxss */
.m-card {
  background-color:white;
  box-shadow:1rpx 1rpx 30rpx #dde0e1;
  border-radius: 10rpx;
  padding-left:40rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
  margin:40rpx 30rpx;
  display:flex;
  position:relative;
}

.m-img {
  width: 50px; 
  height: 50px;
  border-radius: 50%;
  border: 5rpx solid white;
}

.m-text {
  display:flex;
  flex-direction:column;
  padding:0rpx 20rpx;
  line-height:1.2em;
  justify-content:center;
}

.tiny-text {
  font-size: 0.8em;
}

.status {
  width: 20px; 
  height: 20px;
  border-radius: 50%;
  align-self: center;
  position: absolute;
  right: 60rpx;
  border: 5rpx solid white;
}

.accepted {
  background-color: lightgreen;
}

.pending {
    background-color: yellow;
}

.declined {
  background-color: orangered;
}




.box {
  margin-top: 20%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 80rpx;
  padding: 20rpx;
  line-height: 1.5em;
  text-align: center;
}


/*Navbar styling*/

.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}