/* pages/search/search.wxss */
.box {
  margin-top: 20%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 80rpx;
  padding: 20rpx;
  line-height: 1.5em;
  text-align: center;
  /*box-shadow:1rpx 1rpx 30rpx #dde0e1;*/
}

.btn-hover {
  background-color:#4BDDB9;
  box-shadow:1rpx 1rpx 20rpx #c7f6eb;
  color:white;
}

button {
  background-color: white;
  border: 1rpx solid #4BDDB9;
  box-shadow:1rpx 1rpx 20rpx #c7f6eb;
  border-radius: 40rpx;
  letter-spacing: 0.4px;
  margin: 12rpx;
  font-size: 30rpx;
  line-height: 0;
  padding-left: 0;
  padding-right: 0;
  padding: 25rpx 20rpx;
  color: #5D737E;
}

.netflix {
  border: 1rpx solid red !important;
  box-shadow:1rpx 1rpx 20rpx red !important;
}

.btn-hover-netflix {
  box-shadow: inset 1rpx 1rpx 20rpx red;
  background-color: red;
  color: white;
}

.container-tags {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 0 20rpx;
}

scroll-view {
  padding-bottom:20rpx;
}

/* NAVBAR */
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    /*margin-bottom: -1px;*/
}
.navbar-text {
    display: block;
    /*width: 30rpx;*/
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}
